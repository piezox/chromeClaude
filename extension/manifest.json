{
  "manifest_version": 3,
  "name": "Claude Page Summarizer",
  "version": "1.0",
  "description": "Uses Claude API to summarize web pages",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:3000/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}